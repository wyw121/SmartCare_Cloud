<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartcare.cloud.mapper.DoctorElderlyRelationMapper">

    <resultMap id="BaseResultMap" type="com.smartcare.cloud.entity.DoctorElderlyRelation">
        <id column="id" property="id" />
        <result column="doctor_id" property="doctorId" />
        <result column="elderly_id" property="elderlyId" />
        <result column="relationship_type" property="relationshipType" />
        <result column="start_date" property="startDate" />
        <result column="end_date" property="endDate" />
        <result column="status" property="status" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>

    <!-- 查询医生负责的所有老人ID列表 -->
    <select id="selectElderlyIdsByDoctorId" resultType="java.lang.Long">
        SELECT DISTINCT elderly_id
        FROM doctor_elderly_relation
        WHERE doctor_id = #{doctorId}
          AND status = 1
          AND is_deleted = 0
          AND (end_date IS NULL OR end_date >= CURDATE())
    </select>

    <!-- 检查医生是否有权限访问指定老人 -->
    <select id="checkDoctorElderlyAccess" resultType="int">
        SELECT COUNT(1)
        FROM doctor_elderly_relation
        WHERE doctor_id = #{doctorId}
          AND elderly_id = #{elderlyId}
          AND status = 1
          AND is_deleted = 0
          AND (end_date IS NULL OR end_date >= CURDATE())
    </select>

    <!-- 查询老人的主治医生ID -->
    <select id="selectPrimaryDoctorId" resultType="java.lang.Long">
        SELECT doctor_id
        FROM doctor_elderly_relation
        WHERE elderly_id = #{elderlyId}
          AND relationship_type = 'primary'
          AND status = 1
          AND is_deleted = 0
          AND (end_date IS NULL OR end_date >= CURDATE())
        LIMIT 1
    </select>

</mapper>
